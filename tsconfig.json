{
    "compilerOptions": {
        "jsx": "preserve",
        "target": "es5",
        "module": "esnext",
        "declaration": true,
        "outDir": "dist",
        "strict": false,
        "lib": ["dom", "esnext"],
        "esModuleInterop": true,
        "strictNullChecks": true,
        "downlevelIteration": true,
        "plugins": [],
        "moduleResolution": "node",
        "allowJs": true,
        "skipLibCheck": true,
        "noEmit": true,
        "incremental": true,
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "exclude": ["dist", "src/tests"],
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "next.config.js",
        "src/pages/index.mdx"
    ]
}
